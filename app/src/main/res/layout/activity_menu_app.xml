<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".MenuApp">

    <Button
        android:id="@+id/agregarCesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Agregar a la cesta" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="379dp"
        android:layout_height="678dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="2">

        <!-- Aquí agregarás las ImageView para mostrar las imágenes -->

        <ImageView
            android:id="@+id/ps4"
            android:layout_width="253dp"
            android:layout_height="220dp"
            android:layout_row="0"
            android:layout_column="3"
            app:srcCompat="@drawable/ps4" />

        <ImageView
            android:id="@+id/movil"
            android:layout_width="151dp"
            android:layout_height="221dp"
            android:layout_row="1"
            android:layout_column="3"
            app:srcCompat="@drawable/movil" />

        <ImageView
            android:id="@+id/nintendo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            app:srcCompat="@drawable/nintendo" />

        <ImageView
            android:id="@+id/xbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"

            app:srcCompat="@drawable/xbox" />


    </GridLayout>


</RelativeLayout>